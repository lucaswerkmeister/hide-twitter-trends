{
    "manifest_version": 2,
    "name": "Hide Twitter Trends",
    "description": "Hide the Trends widget on Twitter",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": ["https://twitter.com/*"],
            "js": ["hide-twitter-trends.js"]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "hide-twitter-trends@lucaswerkmeister.de"
        }
    }
}
